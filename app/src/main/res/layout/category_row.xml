<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/space_10"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardElevation="2sp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ImageView
                android:id="@+id/category_image"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/no_image"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/category_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/category_image"
                android:paddingBottom="@dimen/space_1"
                android:paddingLeft="@dimen/space_1"
                android:paddingRight="@dimen/space_1"
                android:paddingTop="@dimen/space_1"
                android:textColor="@color/textColorSecondary"
                android:textSize="@dimen/small_title" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>