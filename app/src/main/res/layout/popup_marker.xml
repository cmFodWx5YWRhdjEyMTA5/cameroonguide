<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/map_icon_width"
        android:layout_height="@dimen/map_icon_height"
        android:layout_gravity="center_vertical"
        android:contentDescription="@string/map_icon_desc"
        android:padding="@dimen/space_mini_2"
        android:scaleType="centerCrop"
        android:src="@drawable/placeholder" />

    <LinearLayout
        android:paddingLeft="@dimen/space_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_1"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/small_title"
            android:textStyle="bold"
            tools:text="Title" />

        <TextView
            android:id="@+id/snippet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_mini_3"
            android:textColor="@color/textColorSecondary"
            android:textSize="@dimen/small_title"
            tools:text="Snippet" />

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_mini_4"
            android:textColor="@color/textColorSecondary"
            android:textSize="@dimen/small_title"
            tools:text="Address" />

    </LinearLayout>

</LinearLayout>
